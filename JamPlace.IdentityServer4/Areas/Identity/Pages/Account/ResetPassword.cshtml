@page
@model ResetPasswordModel
@{
    ViewData["Title"] = "Reset password";
}


<div class="row">
    <div class="card col xl4 push-xl4 m8 push-m2 s12 card-custom">
        <div class="welocme-text center-align">Ustaw nowe hasło</div>
        <form id="account" method="post">
            <input asp-for="Input.Code" type="hidden" />
            <input asp-for="Input.Email"  hidden />
            

            <div class="row">
                <div class="input-field col l10 push-l1 s12">
                    <label>Hasło</label>
                    <input asp-for="Input.Password" class="form-control" />
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                </div>
            </div>
            <div class="row">
                <div class="input-field col l10 push-l1 s12">
                    <label>Potiwerdź hasło </label>
                    <input asp-for="Input.ConfirmPassword" class="form-control" />
                    <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                </div>
            </div>
            <div asp-validation-summary="All" class="text-danger no_dots"></div>

            <div class="row top-margin">

                <div class="col l10 push-l1 s12">

                    <!-- <button type="submit" class="mat-button"><img class="googleLogin" src="~/assets/img/search.svg" alt="">Zaloguj przez Google</button> -->
                    <button type="submit" class="login-button">Kontynuuj</button>

                </div>
            </div>
        </form>
    </div>
</div>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
